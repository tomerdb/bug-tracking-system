<Window x:Class="Telhai.CS.DotNet.ItamarErez.TomerHarari.UI.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="Bug Tracking System" Height="600" Width="800">
    <Grid Background="#FFF5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Bug Tracking System" 
                FontSize="24" 
                HorizontalAlignment="Center"
                Margin="0,20,0,20"/>

        <StackPanel Grid.Row="1" 
                   HorizontalAlignment="Center" 
                   Orientation="Horizontal"
                   Margin="20">
            <Button Name="CategoryButton" 
                   Click="CategoryButton_Click"
                   Margin="10">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#FF2196F3" 
                               CornerRadius="5"
                               Width="150" 
                               Height="100">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Manage Categories" 
                                        Foreground="White"
                                        FontSize="16"
                                        TextAlignment="Center"
                                        TextWrapping="Wrap"
                                        Margin="10"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Name="BugsButton" 
                   Click="BugsButton_Click"
                   Margin="10">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#FF4CAF50" 
                               CornerRadius="5"
                               Width="150" 
                               Height="100">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Manage Bugs" 
                                        Foreground="White"
                                        FontSize="16"
                                        TextAlignment="Center"
                                        TextWrapping="Wrap"
                                        Margin="10"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

        <Frame Grid.Row="2" x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>